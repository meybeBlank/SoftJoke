<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_cecece_background_gray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8" />

    <TextView
        android:id="@+id/tv_user_mine_fra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_mine"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:textColor="@color/c_333333_text"
        android:textSize="@dimen/sp_15"
        tools:text="暂未登录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_mine"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="页面建设"
        android:textColor="@color/c_333333_text"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_mine"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="联系客服"
        android:textColor="@color/c_333333_text"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_logout_mine_fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/shape_bg_onpress"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />
</LinearLayout>